<div class="modal">
  <div class="modal-top">
    <div class="modal-top-left">
      What's your question?
    </div>
    <div class="modal-top-right">
      <i class="fa fa-times fa-3x"></i>
    </div>
  </div>
  <div class="modal-bottom">
    <div class="modal-bottom-left">
      <select id="label-select" class="categories" name="label-select">
        <option disabled selected> -- select a category -- </option>
        <option value="html">html</option>
        <option value="css">css</option>
        <option value="javascript">javascript</option>
        <option value="jquery">jquery</option>
        <option value="node">node</option>
      </select>
      <textarea id="q-input" maxlength="220" placeholder="What's on your mind?"></textarea>
    </div>
    <div class="modal-bottom-right">
      <button id="q-button" type="submit" name="button">Ask!</button>
    </div>
  </div>
</div>

